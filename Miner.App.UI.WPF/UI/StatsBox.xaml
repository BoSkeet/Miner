<UserControl x:Class="HD.StatsBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HD"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Controls:Tile Title="{Binding walletOwner}" Style="{StaticResource SmallTileStyle}" Click="Tile_Click">
                <StackPanel>
                    <Label x:Name="label" Content="{Binding currentMiningPerformanceString}"></Label>
                </StackPanel>
            </Controls:Tile>
        </StackPanel>
    </Grid>
</UserControl>
